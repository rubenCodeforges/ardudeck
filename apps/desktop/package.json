{
  "name": "@ardudeck/desktop",
  "version": "0.1.0",
  "description": "ArduDeck - Desktop Application",
  "main": "./out/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-builder",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@ardudeck/comms": "workspace:*",
    "@ardudeck/mavlink-ts": "workspace:*",
    "@ardudeck/msp-ts": "workspace:*",
    "@ardudeck/stm32-dfu": "workspace:*",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "dockview": "^4.13.0",
    "dockview-react": "^4.13.0",
    "electron-store": "^11.0.2",
    "leaflet": "^1.9.4",
    "react-leaflet": "4.2.1",
    "usb": "^2.16.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "jimp": "0.22.12",
    "png2icons": "^2.0.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "build": {
    "appId": "com.ardudeck.desktop",
    "productName": "ArduDeck",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ],
    "asarUnpack": [
      "resources/bin/**/*",
      "resources/firmware/**/*",
      "resources/sitl/**/*"
    ],
    "icon": "resources/icon",
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "icon": "resources/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "resources/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
